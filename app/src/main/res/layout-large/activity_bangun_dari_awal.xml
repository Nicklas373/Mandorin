<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0bec5">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.v7.widget.CardView
            android:id="@+id/back_activity_bangun_dari_awal"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorPrimary">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:gravity="start"
                android:contentDescription="@string/back" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/app_name"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/app_mandor_bangun_awal_title"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="55dp"/>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_bangun_awal"
        android:layout_width="420dp"
        android:layout_height="600dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="12dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_title_bangun_awal"
            android:layout_width="166dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="2dp"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_mandor_bangun_awal_1"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#ffffff" />

        </android.support.v7.widget.CardView>

        <RadioGroup
            android:id="@+id/rg_borongan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/app_mandor_bangun_awal_radio_1"
                android:textColor="#000"
                android:textSize="20sp"/>

            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/app_mandor_bangun_awal_radio_2"
                android:textColor="#000"
                android:textSize="20sp"/>

        </RadioGroup>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_title_luas_tanah"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="2dp"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_mandor_bangun_awal_2"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

        </android.support.v7.widget.CardView>

        <EditText
            android:id="@+id/et_luas_tanah"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="190dp"
            android:ems="10"
            android:hint="@string/app_mandor_bangun_awal_4"
            android:gravity="top|start"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="135dp"
            android:layout_marginTop="180dp"
            android:text="@string/app_mandor_bangun_awal_3"
            android:textColor="#000"
            android:textSize="35sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_title_upload_design"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="270dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="2dp"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_mandor_bangun_awal_5"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/button_upload"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:background="#bdbdbd"
            android:text="@string/app_mandor_bangun_awal_6"
            android:textColor="#000"
            android:textSize="20sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button_selanjutnya"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="530dp"
            android:background="@color/colorPrimary"
            android:text="@string/app_mandor_bangun_awal_8"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/fileName_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="420dp"
            android:text="@string/app_mandor_bangun_awal_7"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="420dp"
            android:text=""
            android:textColor="#000"
            android:textSize="15sp" />

        <!-- Dummy Debugging Begin -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dummy"
            android:text=""
            android:visibility="gone"
            />

        <!-- Dummy Debugging End -->

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>