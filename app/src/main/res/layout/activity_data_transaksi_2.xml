<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#b0bec5">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.v7.widget.CardView
            android:id="@+id/back_activity_data_transaksi_2"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorPrimary">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:gravity="start"
                android:contentDescription="@string/back" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/app_name"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/app_mandor_data_pembayaran_renovasi_title_2"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:fontFamily="@font/test"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="55dp"/>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_bangun_awal_2"
        android:layout_width="380dp"
        android:layout_height="160dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="12dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_title_data_pembayaran"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/test"
            android:layout_gravity="center_horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardMaxElevation="2dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_mandor_data_pembayaran_renovasi_2_4"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_title_nomor_rekening_bangun_dari_awal_2"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginTop="80dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardMaxElevation="2dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_mandor_data_pembayaran_renovasi_2_1"
                android:fontFamily="@font/test"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

        </android.support.v7.widget.CardView>

        <EditText
            android:id="@+id/user_input_nomor_rekening_transaksi_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="170dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/test"
            android:textColor="#000"
            android:focusable="false"
            android:clickable="false"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_bangun_awal_3"
        android:layout_width="380dp"
        android:layout_height="300dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="12dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_title_bukti_pembayaran_transaksi_2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="70dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_mandor_data_pembayaran_renovasi_2_2"
                android:textAlignment="center"
                android:fontFamily="@font/test"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/upload_pembayaran_transaksi_2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/app_mandor_menu_edit_akun_1"
            android:src="@drawable/upload_bukti_pembayaran"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20sp"
            android:layout_gravity="center|bottom"
            android:src="@drawable/kirim"
            android:id="@+id/kirim_activity_transaksi_2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/empty" />

        <TextView
            android:id="@+id/fileName_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/test"
            android:text="@string/app_mandor_bangun_awal_7"
            android:textColor="#000" />

        <TextView
            android:id="@+id/fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="120dp"
            android:text=""
            android:fontFamily="@font/test"
            android:textColor="#000" />

        <!-- Dummy Debugging !-->
