        <TextView
            android:id="@+id/nik_mandor"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:text=""
            android:textColor="#fff"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dummy_1"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:text=""
