<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    android:id="@+id/cv_head"
    card_view:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/cv_title"
            android:layout_height="35dp"
            card_view:cardUseCompatPadding="true"
            app:cardBackgroundColor="#0069c0">

            <TextView
                android:id="@+id/TextViewTitle"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:text="@string/app_mandor_recycler_status_pembayaran_renovasi_4"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:background="#000"
            android:layout_toEndOf="@+id/text_nomor_kontrak_status_pembayaran_renovasi"
            android:layout_below="@+id/text_nomor_kontrak_status_pembayaran_renovasi_1"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/text_nomor_kontrak_status_pembayaran_renovasi"
            android:layout_width="110dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="@string/app_mandor_recycler_status_pembayaran_renovasi_1"
            android:layout_below="@+id/cv_title"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_nomor_kontrak_status_pembayaran_renovasi_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_nomor_kontrak_status_pembayaran_renovasi"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/cv_title"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/text_biaya_status_pembayaran_renovasi"
            android:layout_width="110dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="@string/app_mandor_recycler_status_pembayaran_renovasi_2"
            android:layout_below="@+id/text_nomor_kontrak_status_pembayaran_renovasi"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_biaya_status_pembayaran_renovasi_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_biaya_status_pembayaran_renovasi"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/text_nomor_kontrak_status_pembayaran_renovasi"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:background="#000"
            android:layout_toEndOf="@+id/text_biaya_status_pembayaran_renovasi"
            android:layout_below="@+id/text_biaya_status_pembayaran_renovasi_1"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/text_alamat_status_pembayaran_renovasi"
            android:layout_width="110dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="@string/app_mandor_recycler_status_pembayaran_renovasi_3"
            android:layout_below="@+id/text_biaya_status_pembayaran_renovasi"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_alamat_status_pembayaran_renovasi_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_alamat_status_pembayaran_renovasi"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/text_biaya_status_pembayaran_renovasi"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp" />

        <!-- Dummy Debugging !-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_id_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_nama_pemesan_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_email_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_alamat_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_no_telp_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_no_rekening_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_status_satu_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_status_dua_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_status_tiga_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_total_satu_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_total_dua_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_total_tiga_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_bukti_satu_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_bukti_dua_pembayaran_renovasi"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_bukti_tiga_pembayaran_renovasi"
            android:visibility="gone"/>
        <!-- Dummy Debugging End !-->

    </RelativeLayout>

</android.support.v7.widget.CardView>