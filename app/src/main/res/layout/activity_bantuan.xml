<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="#b0bec5">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.v7.widget.CardView
            android:id="@+id/back_activity_bantuan"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorPrimary">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/back"
                android:gravity="start"
                android:src="@drawable/back" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/app_name"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/app_mandor_bantuan_title"
            android:textAlignment="center"
            android:fontFamily="@font/test"
            android:textColor="#ffffff"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="10dp"/>
    </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_layanan_jasa"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintVertical_bias="0.0"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="12dp"
            app:cardMaxElevation="2dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_mandor_bantuan_1"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/test"
                android:textAlignment="center"/>

            <View
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:background="#000"
                android:layout_marginTop="75dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_mandor_bantuan_1_4"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/test"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/telp_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_mandor_bantuan_1_2"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="190dp"
                android:fontFamily="@font/test"
                android:layout_marginStart="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heck"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="190dp"
                android:fontFamily="@font/test"
                android:layout_marginStart="165dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_title_telp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="185dp"
        android:layout_marginStart="120dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text=""
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"/>

        </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/email_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_mandor_bantuan_1_1"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="240dp"
                android:fontFamily="@font/test"
                android:layout_marginStart="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heck"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="240dp"
                android:fontFamily="@font/test"
                android:layout_marginStart="165dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_title_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="235dp"
                android:layout_marginStart="120dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text=""
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/website_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_mandor_bantuan_1_3"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="290dp"
                android:fontFamily="@font/test"
                android:layout_marginStart="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heck"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="290dp"
                android:fontFamily="@font/test"
                android:layout_marginStart="165dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_title_website"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="285dp"
                android:layout_marginStart="120dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/user_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text=""
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"/>
            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>