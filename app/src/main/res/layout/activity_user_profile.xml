<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#bdbdbd">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    <android.support.v7.widget.CardView
        android:id="@+id/back_user_profile"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:gravity="start"
            android:contentDescription="@string/back" />

    </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/toolbar_text"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_mandor_user_profile_title"
            android:textColor="#ffffff"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="10dp"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_konfirmasi_awal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#fff"
        android:layout_marginTop="55dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_head_1"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/app_mandor_1_profile_1"/>

        <TextView
            android:id="@+id/userFullName"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="45dp"
            android:textColor="#000"/>

        <View
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="80dp"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="110dp"
            android:textColor="#000"/>

        <View
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="140dp"
            android:layout_gravity="end" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#b0bec5"
            android:layout_marginTop="210dp"
            android:layout_gravity="end" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/app_mandor_user_menu_1"
            android:layout_gravity="start"
            android:layout_marginTop="250dp"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/user_age"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="250dp"
            android:textSize="20sp"
            android:textColor="#000"/>

        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="290dp"
            android:layout_gravity="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_mandor_user_misc"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="70dp"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/user_id"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="300dp"
            android:textSize="20sp"
            android:textColor="#000"/>

        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="340dp"
            android:layout_gravity="end" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/app_mandor_user_menu_2"
            android:layout_gravity="start"
            android:layout_marginTop="300dp"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_mandor_user_misc"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="70dp"
            android:textSize="20sp"
            android:textColor="#000"/>

        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="390dp"
            android:layout_gravity="end" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/app_mandor_user_menu_3"
            android:layout_gravity="start"
            android:layout_marginTop="350dp"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_mandor_user_misc"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="70dp"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/user_telp"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="350dp"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/app_mandor_user_menu_4"
            android:layout_gravity="start"
            android:layout_marginTop="400dp"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_mandor_user_misc"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="70dp"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/user_address"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="400dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:scrollbars="vertical"/>

        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="440dp"
            android:layout_gravity="end" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b0bec5"
            android:layout_marginTop="520dp"
            android:layout_gravity="end" />

        <!-- Dummy Debugging Begin !-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/dummy_userpic" />
        <!-- Dummy Debugging End !-->

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>