            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_nama_mandor_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="170dp"
            android:layout_toEndOf="@id/txt_nama_mandor"
            android:text="@string/empty"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_nik_mandor"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="5dp"
            android:text="@string/app_mandor_1_profile_3_data_2"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_nik_mandor_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="170dp"
            android:layout_toEndOf="@id/txt_nama_mandor"
            android:text="@string/empty"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_umur_mandor"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="5dp"
            android:text="@string/app_mandor_1_profile_3_data_3"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_umur_mandor_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="170dp"
            android:layout_toEndOf="@id/txt_nama_mandor"
            android:text="@string/empty"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_tempat_mandor"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="130dp"
            android:layout_marginStart="5dp"
            android:text="@string/app_mandor_1_profile_3_data_6"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_tempat_mandor_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="170dp"
            android:layout_marginStart="170dp"
            android:layout_toEndOf="@id/txt_nama_mandor"
            android:text="@string/empty"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_tgl_mandor"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="170dp"
            android:layout_marginStart="5dp"
            android:text="@string/app_mandor_1_profile_3_data_7"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_tgl_mandor_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="130dp"
            android:layout_marginStart="170dp"
            android:layout_toEndOf="@id/txt_nama_mandor"
            android:text="@string/empty"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_agama_mandor"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="210dp"
            android:layout_marginStart="5dp"
            android:text="@string/app_mandor_1_profile_3_data_8"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_agama_mandor_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="210dp"
            android:layout_marginStart="170dp"
            android:layout_toEndOf="@id/txt_nama_mandor"
            android:text="@string/empty"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_alamat_mandor"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="250dp"
            android:layout_marginStart="5dp"
            android:text="@string/app_mandor_1_profile_3_data_4"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_alamat_mandor_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="250dp"
            android:layout_marginStart="170dp"
            android:layout_toEndOf="@id/txt_nama_mandor"
            android:text="@string/empty"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_lama_kerja_mandor"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="290dp"
            android:layout_marginStart="5dp"
            android:text="@string/app_mandor_1_profile_3_data_5"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_lama_kerja_mandor_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="290dp"
            android:layout_marginStart="170dp"
            android:layout_toEndOf="@id/txt_nama_mandor"
            android:text="@string/empty"
            android:textSize="20sp"
            android:textColor="#000000"/>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>