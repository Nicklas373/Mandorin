<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#b0bec5">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    <android.support.v7.widget.CardView
        android:id="@+id/back_activity_tanggapan_mandor"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:gravity="start"
            android:contentDescription="@string/back" />

    </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/app_name"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/app_mandor_tanggapan"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="55dp"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="100dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_tanggapan"
                android:layout_width="400dp"
                android:layout_height="532dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="12dp"
                app:cardMaxElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.697">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_title_nama"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_mandor_tanggapan_1"
                        android:textAlignment="center"
                        android:textColor="#ffffff" />

                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/input_nama_tg_awal"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="20dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    tools:ignore="Autofill,LabelFor" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_title_lokasi"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="70dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_mandor_tanggapan_2"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp"
                        android:textColor="#ffffff" />

                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/input_lokasi_tg_awal"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="20dp"
                    android:ems="10"
                    android:inputType="textLongMessage"
                    android:text=""
                    tools:ignore="Autofill,LabelFor" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_title_tipe_tg_kerja"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="130dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_mandor_tanggapan_3"
                        android:textAlignment="center"
                        android:layout_marginTop="2dp"
                        android:textColor="#ffffff" />

                </android.support.v7.widget.CardView>

                <RadioGroup
                    android:id="@+id/rg_tipe"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="180dp"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/test_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/app_mandor_tanggapan_5"
                        android:textColor="#000" />

                    <RadioButton
                        android:id="@+id/test_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/app_mandor_tanggapan_6"
                        android:textColor="#000" />

                </RadioGroup>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_title_tanggapan"
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="250dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_mandor_tanggapan"
                        android:textAlignment="center"
                        android:textColor="#ffffff" />

                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/input_tanggapan_tg_awal"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="300dp"
                    android:layout_marginEnd="20dp"
                    android:ems="10"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:minLines="2"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:hint="@string/app_mandor_tanggapan_7"
                    android:text=""
                    tools:ignore="LabelFor" />

                <Button
                    android:id="@+id/button_kirim_tg_awal"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="450dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/app_mandor_bangun_awal_next_8"
                    android:textColor="#fff" />

                <!-- DUMMY -->

                <TextView
                    android:id="@+id/dummy_old"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:text=""
                    android:textColor="#fff"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tg_nama_old"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:text=""
                    android:textColor="#fff"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tg_nik_old"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:text=""
                    android:textColor="#fff"
                    android:visibility="gone"/>

                <!-- DUMMY END -->
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>