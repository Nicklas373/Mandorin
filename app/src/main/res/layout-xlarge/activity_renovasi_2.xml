<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#b0bec5">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.v7.widget.CardView
            android:id="@+id/back_activity_renovasi_2"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorPrimary">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:gravity="start"
                android:contentDescription="@string/back" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/app_name"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/app_mandor_renovasi_title"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="55dp"
            android:textSize="30sp"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_bangun_awal_title_2"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginBottom="150dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="12dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_mandor_bangun_awal_next_1"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textColor="#ffffff" />

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_bangun_awal_2"
                android:layout_width="650dp"
                android:layout_height="842dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="12dp"
                app:cardMaxElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.697">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_title_nama"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="8dp"
                    app:cardMaxElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_mandor_bangun_awal_next_2"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="30sp"/>

                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/input_nama_rn_awal"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="end"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="30sp"
                    tools:ignore="Autofill,LabelFor" />


                <android.support.v7.widget.CardView
                    android:id="@+id/cv_title_nik"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="120dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="8dp"
                    app:cardMaxElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_mandor_bangun_awal_next_3"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="30sp"/>

                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/input_nik_rn_awal"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="110dp"
                    android:layout_gravity="end"
                    android:ems="10"
                    android:inputType="number"
                    android:text=""
                    android:textSize="30sp"
                    tools:ignore="Autofill,LabelFor" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_title_email"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="210dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="8dp"
                    app:cardMaxElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_mandor_bangun_awal_next_4"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="30sp"/>

                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/input_email_rn_awal"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="200dp"
                    android:layout_gravity="end"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textSize="30sp"
                    tools:ignore="Autofill,LabelFor" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_title_hp"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="300dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="8dp"
                    app:cardMaxElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_mandor_bangun_awal_next_5"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="30sp"/>

                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/input_hp_rn_awal"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="290dp"
                    android:layout_gravity="end"
                    android:ems="10"
                    android:inputType="phone"
                    android:text=""
                    android:textSize="30sp"
                    tools:ignore="Autofill,LabelFor" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_title_tgl_survey"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="390dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="8dp"
                    app:cardMaxElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_mandor_bangun_awal_next_7"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="30sp"/>

                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/input_tgl_rn_awal"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="380dp"
                    android:layout_gravity="end"
                    android:ems="10"
                    android:hint="@string/hint"
                    android:inputType="date"
                    android:text=""
                    android:textSize="30sp"
                    tools:ignore="Autofill,LabelFor" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_title_alamat"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="540dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="8dp"
                    app:cardMaxElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_mandor_bangun_awal_next_6"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="30sp"/>

                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/input_alamat_rn_awal"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="470dp"
                    android:layout_marginEnd="30dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:minLines="4"
                    android:scrollbars="vertical"
                    android:text=""
                    android:textSize="30sp"
                    tools:ignore="Autofill,LabelFor" />

                <Button
                    android:id="@+id/button_kirim_rn_awal"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="710dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/app_mandor_bangun_awal_next_8"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:textSize="40sp"/>

                <!-- DUMMY -->

                <TextView
                    android:id="@+id/rb_old"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text=""
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.013"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.065"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/ren_1_old"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:text=""
                    android:textColor="#fff"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/nama_1_old"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text=""
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.013"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.065"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/nik_1_old"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text=""
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.013"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.065"
                    android:visibility="gone"/>

                <!-- DUMMY END -->
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>